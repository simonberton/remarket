{% extends "base_front.html.twig" %}

{% block body %}
<header class="masthead">
    <div class="container">
    </div>
</header>
<!-- Portfolio Grid-->
<section class="page-section bg-light" id="portfolio">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Productos</h2>
            <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
        </div>
        <div class="row">
            {% for category in categories %}
                <div class="col-lg-3 col-sm-4 mb-4">
                    <!-- Portfolio item 1-->
                    <div class="portfolio-item">
                        <a class="portfolio-link" href="{{ path('category_home', {'categorySlug': category.slug}) }}">
                            <div class="portfolio-hover">
                                <div class="portfolio-hover-content"><i class="fas fa-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src="/uploads/products/{{ category.mainImageFilename }}" style="min-height: 300px;">
                        </a>
                        <div class="portfolio-caption">
                            <div class="portfolio-caption-heading">{{ category.name }}</div>
                            <div class="portfolio-caption-subheading text-muted">{{ category.description }}</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
<!-- About-->
<section class="page-section" id="about">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Blog</h2>
        </div>
        <ul class="timeline">
            {% for post in posts %}
                <li class="{{ loop.index is not odd?'timeline-inverted':'' }}">
                    <div class="timeline-image"><img class="rounded-circle img-fluid" src="assets/img/about/1.jpg" alt="..." /></div>
                    <div class="timeline-panel">
                        <div class="timeline-heading">
                            <h4 class="subheading">{{ post.title }}</h4>
                        </div>
                        <div class="timeline-body">{{ post.description|raw }}</div>
                    </div>
                </li>
            {% endfor %}
            <li class="timeline-inverted">
                <div class="timeline-image">
                    <a href="{{ path('blog_home') }}">
                        <h4>
                            Nuestro
                            <br />
                            Blog!
                        </h4>
                    </a>
                </div>
            </li>
        </ul>
    </div>
</section>
{% endblock %}